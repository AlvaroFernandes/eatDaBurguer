<header class="header">
  <h1>Burger Shop</h1>
</header>


<div class="created-burger">
  <h2>List of burgers created!</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="devoured">
  <h2>Already devoured burgers!</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>


<div class="form">
  <h2></h2>
  <form class="insert-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devour"></label><br>
      <input type="radio" name="devour" value="1"> Devour!<br>
      <input type="radio" name="devour" value="0"> Do not devour!
    </div>

    <button type="submit" class="add">Add Burger!</button>
  </form>
</div>